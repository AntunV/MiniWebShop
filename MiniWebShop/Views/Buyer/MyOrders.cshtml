@using MiniWebShop.Services.Interfaces
@model IEnumerable<MiniWebShop.Shared.Models.ViewModel.OrderModels.OrderViewModel>

@{
    ViewData["Title"] = "MyOrders";
}



<h1>My Orders</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                Details/Cancel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.ActionLink("Order details", "MyOrder", new { id = item.Id }) |
                    @Html.ActionLink("CancelOrder", "CancelOrder", new { id = item.Id }) |
                </td>
              
            </tr>
        }
    </tbody>
